<style>
  .error-code {
    color: rgba(var(--text-color) / 0.4);
    font-size: 9.6rem;
    line-height: 1;
  }
</style>

<div class="container text-center">
  <p class="error-code mb-0 font-bold">404</p>
  <h1 class="{{ section.settings.heading_size }} text-center">{{ 'templates.404.title' | t }}</h1>
  <p>{{ 'templates.404.subtext' | t }}</p>
  <p class="mt-12">
    <a class="btn btn--primary" href="{{ routes.root_url }}">{{ 'templates.404.link' | t }}</a>
  </p>
</div>

{% schema %}
{
  "name": "404",
  "class": "cc-main-404 section section--template",
  "settings": [
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h6",
          "label": "Extra extra small"
        },
        {
          "value": "h5",
          "label": "Extra small"
        },
        {
          "value": "h4",
          "label": "Small"
        },
        {
          "value": "h3",
          "label": "Medium"
        },
        {
          "value": "h2",
          "label": "Large"
        },
        {
          "value": "h1",
          "label": "Extra large"
        },
        {
          "value": "h0",
          "label": "Extra extra large"
        }
      ],
      "default": "h3"
    }
  ]
}
{% endschema %}
