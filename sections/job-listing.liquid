  {
    "name": "Job Listing",
    "settings": [
      {
      "type": "text",
      "id": "title",
      "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "to_apply",
        "label": "How to apply"
      }
     ],
    "blocks": [
          {
      "type": "Job",
      "name": "Job",
      "settings": [
      {
        "type": "text",
        "id": "job_title",
        "label": "Job Title"
      },
      {
        "type": "textarea",
        "id": "summary_text",
        "label": "Summary text"
      },
      {
        "type": "select",
        "id": "location",
        "label": "Location",
        "default": "park_royal",
        "options": [
          {
            "label": "Park Royal, NW10",
            "value": "park_royal"
          },
          {
            "label": "Fulham, SW6",
            "value": "fulham"
          },
          {
            "label": "Richmond, SW6",
            "value": "richmond"
          }
        ]
      },
      {
        "type": "select",
        "id": "job_type",
        "label": "Job Type",
        "default": "part_time",
        "options": [
          {
            "label": "Part-time",
            "value": "part_time"
          },
          {
            "label": "Full-time",
            "value": "full_time"
          }
        ]
      },
      {
        "type": "text",
        "id": "salary",
        "label": "Salary"
      },
      {
        "type": "text",
        "id": "years_experience",
        "label": "Years Experience"
      },
      {
        "type": "text",
        "id": "start_date",
        "label": "Start Date"
      },
      {
        "type": "text",
        "id": "schedule",
        "label": "Schedule"
      },
      {
        "type": "richtext",
        "id": "full_description",
        "label": "Full Description"
      },
      {
        "type": "richtext",
        "id": "essential_skills",
        "label": "Essential Skills"
      },
      {
        "type": "richtext",
        "id": "desirable_skills",
        "label": "Desirable Skills"
      },
      {
        "type": "richtext",
        "id": "experience",
        "label": "Experience"
      },
      {
        "type": "richtext",
        "id": "benefits",
        "label": "Benefits"
      }
      ]
          }
    ],
    "presets": [
      {
        "name": "Job Listing",
        "settings": {},
        "blocks": [
        ]
      }
    ]
  }
{% endschema %}
